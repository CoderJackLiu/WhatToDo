{
  "name": "electron-todolist",
  "version": "1.0.2",
  "description": "支持分组管理的 TodoList 桌面应用",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --x64",
    "build:dir": "electron-builder --win --x64 --dir"
  },
  "keywords": [
    "electron",
    "todolist",
    "sticky-notes",
    "group-management"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "sharp": "^0.34.5",
    "to-ico": "^1.1.5"
  },
  "build": {
    "appId": "com.electron.todolist",
    "productName": "TodoList",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "deleteAppDataOnUninstall": false
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/node_modules/**/*",
      "!dist",
      "!.git"
    ],
    "electronDownload": {
      "cache": "./electron-cache"
    }
  }
}
